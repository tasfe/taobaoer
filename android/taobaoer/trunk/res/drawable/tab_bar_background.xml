<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Non focused states -->
    <item android:state_focused="false" android:state_selected="false" android:state_pressed="false" android:drawable="@drawable/bottom_menu_list_bg_link" />
    <item android:state_focused="false" android:state_selected="true" android:state_pressed="false" android:drawable="@drawable/bottom_menu_list_bg_selected" />

    <!-- Focused states -->
    <item android:state_focused="true" android:state_selected="false" android:state_pressed="false" android:drawable="@drawable/bottom_menu_list_bg_selected" />
    <item android:state_focused="true" android:state_selected="true" android:state_pressed="false" android:drawable="@drawable/bottom_menu_list_bg_selected" />

    <!-- Pressed -->
    <item android:state_pressed="true" android:drawable="@drawable/bottom_menu_list_bg_selected" />
</selector>